<div class="container card col-md-6 " style="width: 30rem;">
    <div class="col-md-6 ">
        {{!-- {{> message}} --}}
        <form action="/users/login" method="POST">
            <div class="mb-3 mt-3">
                <select class="custom-select" style="width: 400px;">
                    <option selected>類別</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </form>        
        <div class="totalBase mb-3" >
            <P>總金額：</P>
            <strong >22222</strong>
        </div>
    </div>

    {{#each reco}}
    <div class="dataList col-md-6 ">
        
        <div class="col-md-8">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{this.date}}</h6>
            <p class="card-text">{{this.amount}}</p>
        </div>
        
        <div class="operate col-md-4 m-auto">
            <a href="/track/{{this._id}}/edit" class="btn btn-dark" >修改</a>
            <form action="" method="post">
                <button class="btn btn-dark">刪除</button>      
            </form>  
        </div>
        
    </div>
    {{/each}}

    <div class="create col-md-6 ml-3px">            
        <a class="btn btn-primary btn-block" href="/track/new">新增支出</a>    
    </div>

</div>